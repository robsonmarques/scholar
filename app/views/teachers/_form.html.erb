<%= simple_form_for @teacher, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :age, :collection => 18..100, :prompt => "Select..."  %>
  <%= f.input :gender, :collection => gender_types, :prompt => "Select..." %>
  <%= f.input :email %>

  <div class="alert alert-info">
    <%= f.button :submit, :value => "Save", :class => "btn btn-primary" %>
    <%= submit_tag 'Reset', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>
