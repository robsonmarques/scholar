<h2><%= @student.name %></h2>

<div class="btn-group pull-right">
  <%= link_to "Edit Student", edit_student_path, :class => "btn btn-primary" %>
  <%= link_to "List All", students_path, :class => "btn" %>
  <%= link_to "New Student", new_student_path, :class => "btn" %>
</div>

<div class="row">
  <div class="span12">
    <div class="well">
      <h3>Details</h3>
      <ul>
        <li><strong>Age:</strong> <%= @student.age %></li>
        <li><strong>Gender:</strong> <%= @student.gender %></li>
        <li><strong>Email:</strong> <%= mail_to @student.email %></li>
      </ul>
      <div class="pull-right">
        <span>Created at <%= @student.created_at %></span>
        <span>Updated at <%= @student.updated_at %></span>
      </div>
    </div>
  </div>
</div>
